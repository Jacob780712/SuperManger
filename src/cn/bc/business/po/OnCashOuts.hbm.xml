<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.bc.business.po.OnCashOuts" table="on_cash_outs" >
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="user_id" type="java.lang.Integer">
            <column name="user_id"/>
        </property>
        <property name="full_name" type="java.lang.String">
            <column name="full_name"/>
        </property>
        <property name="card_number" type="java.lang.String">
            <column name="card_number"/>
        </property>
        <property name="amount" type="java.lang.Integer">
            <column name="amount"/>
        </property>
        <property name="status" type="java.lang.String">
            <column name="status"/>
        </property>
         <property name="batch_number" type="java.lang.String">
            <column name="batch_number"/>
        </property>
        <property name="remark" type="java.lang.String">
            <column name="remark"/>
        </property>
        <property name="create_date" type="java.util.Date">
            <column name="create_date"/>
        </property>
        <property name="create_person" type="java.lang.String">
            <column name="create_person"/>
        </property>
        <property name="update_date" type="java.util.Date">
            <column name="update_date" />
        </property>
        <property name="update_person" type="java.lang.String">
            <column name="update_person"/>
        </property>
        <property name="mobile_phone" type="java.lang.String" formula="(select a.mobile_phone from on_users a where a.user_id=user_id)">
        </property>
        <property name="id_card" type="java.lang.String" formula="(select a.id_card from on_users a where a.user_id=user_id)">
        </property>
    </class>
</hibernate-mapping>
